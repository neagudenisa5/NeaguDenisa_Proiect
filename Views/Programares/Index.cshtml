@model IEnumerable<NeaguDenisa_Proiect.Models.Programare>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Statistics">Statistici</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataProgramarii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataProgramarii)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pacient.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medic.Nume)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProgramareID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProgramareID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProgramareID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
