@model NeaguDenisa_Proiect.Models.Spital

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Spital</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="NumeSpital" class="control-label"></label>
                <input asp-for="NumeSpital" class="form-control" />
                <span asp-validation-for="NumeSpital" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adresa" class="control-label"></label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;

                                List < NeaguDenisa_Proiect.Models.SpitalViewModels.SpitalMedicData> medici =
                                ViewBag.Medici;
                                foreach (var medic in medici)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedMedici"
                                               value="@medic.MedicID"
                                               @(Html.Raw(medic.IsAngajat ? "checked=\"checked\"" : "")) />
                                        @medic.MedicID @: @medic.Nume
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
